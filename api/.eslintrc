{
    "extends": "airbnb-base",
    "env": {
        "es6": true,
        "browser": true
    },
    "rules": {
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-var": [
            "off"
        ],
        "one-var": [
            "off"
        ],
        "linebreak-style": [
            "Error",
            "windows"
        ],
        "indent": [
            "error", 
            "tab"
        ],
        "no-tabs": [
            "error", 
            { 
                "allowIndentationTabs": true 
            }
        ],
        "no-console": ["off"],
        "eol-last": [
            "never"
        ]
    }
}